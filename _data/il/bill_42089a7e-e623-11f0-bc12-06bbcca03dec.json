{"legislative_session": "104th", "identifier": "SR505", "title": "NO TAX DECOUPLING-FEDS", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["resolution"], "subject": [], "abstracts": [{"note": "", "abstract": "Respectfully urges the Governor of the State of Illinois not to decouple Illinois' tax policy from the federal tax changes contained in H.R. 1. Respectfully urges the governor to pursue his publicly stated preferred method of balancing the State's budget by pursuing pro-growth policies by continuing to align Illinois' tax code with Internal Revenue Code to prevent an unnecessary tax increase on the job creators of our State and to ensure simplicity, fairness, and competitiveness for all Illinois taxpayers."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with Secretary", "date": "2025-10-30", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["filing"], "related_entities": []}, {"description": "Referred to Assignments", "date": "2025-10-30", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "John F. Curran", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"upper\", \"name\": \"John F. Curran\"}", "organization_id": null}], "related_bills": [], "versions": [{"note": "Introduced", "links": [{"url": "https://ilga.gov/documents/legislation/104/SR/PDF/10400SR0505.pdf", "media_type": "application/pdf"}, {"url": "https://ilga.gov/Legislation/BillStatus/FullText?LegDocId=205884&DocName=10400SR0505&DocNum=505&DocTypeID=SR&LegID=164548&GAID=18&SessionID=114&SpecSess=&Session=&Print=1", "media_type": "text/html"}], "date": "", "classification": ""}], "documents": [], "citations": [], "sources": [{"url": "https://ilga.gov/Legislation/BillStatus?DocNum=505&GAID=18&DocTypeID=SR&LegId=164548&SessionID=114", "note": ""}], "extras": {}, "jurisdiction": {"id": "ocd