{"legislative_session": "104th", "identifier": "HB4093", "title": "ELEC CD-RESIDENCY VERIFICATION", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the Election Code. Provides that a candidate may apply for a Residency Verification Certificate from the appropriate election authority no earlier than 180 days before the last day for filing petitions. Provides that a candidate who has received a Residency Verification Certificate may, wherever required to list a residential address, state \"Residency Verified\" and include a copy of the certificate. Sets forth requirements for application and certification. Makes conforming changes. Amends the Freedom of Information Act to make a conforming change."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with the Clerk by Rep. Daniel Didech", "date": "2025-08-01", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-10-15", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Rules Committee", "date": "2025-10-15", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Daniel Didech", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"lower\", \"name\": \"Daniel Didech\"}", "organization_id": null}], "related_bills": [], "versions": [{"note": "Introduced", "links": [{"url": "https://ilga.gov/documents/legislation/104/HB/PDF/10400HB4093.pdf", "media_type": "application/pdf"}, {"url": "https://ilga.gov/Legislation/BillStatus/FullText?LegDocId=205314&DocName=10400HB4093&DocNum=4093&DocTypeID=HB&LegID=164027&GAID=18&SessionID=114&SpecSess=&Session=&Print=1", "media_type": "text/html"}],